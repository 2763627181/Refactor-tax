{
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "installCommand": "cd backend && npm install && cd ../frontend && npm install",
  "framework": null,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/handler"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/handler.js": {
      "maxDuration": 60,
      "memory": 1024
    }
  }
}

